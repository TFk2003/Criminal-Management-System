@model IEnumerable<CriminalManagementSystem.Models.Criminal>

@{
    ViewBag.Title = "Criminals";
}

<h2>Criminals</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
@using (Html.BeginForm("Index", "Criminals", FormMethod.Get))
{
    <div class="form-group row mb-2">
        <div class="col-md-6">
            <input type="text" name="searchString" class="form-control" placeholder="Search by name or ID..." value="@ViewBag.SearchString" />
        </div>
        <div class="col-md-2">
            <input type="submit" value="Search" class="btn btn-secondary" />
        </div>
    </div>
}
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NationalID)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @(item.DateOfBirth?.ToString("yyyy-MM-dd"))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NationalID)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.CriminalID }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.CriminalID }, new { @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.CriminalID }, new { @class = "btn btn-danger btn-sm" })
                    @Html.ActionLink("Arrest", "Create", "Arrests", new { criminalId = item.CriminalID }, new { @class = "btn btn-secondary btn-sm" })
                </td>
            </tr>
        }

</table>
