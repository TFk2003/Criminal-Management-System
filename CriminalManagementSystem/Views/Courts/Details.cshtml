@model CriminalManagementSystem.Models.Court

@{
    ViewBag.Title = "Court Details";
}

<h2>Court Details</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Court Name</dt>
            <dd class="col-sm-9">@Model.CourtName</dd>

            <dt class="col-sm-3">Court Type</dt>
            <dd class="col-sm-9">@Model.CourtType</dd>

            <dt class="col-sm-3">Judge</dt>
            <dd class="col-sm-9">@Model.JudgeName</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    @Html.ActionLink("Edit", "Edit", new { id = Model.CourtID }, new { @class = "btn btn-warning" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>