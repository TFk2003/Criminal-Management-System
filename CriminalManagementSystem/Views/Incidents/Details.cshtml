@model CriminalManagementSystem.Models.Incident

@{
    ViewBag.Title = "Incident Details";
}

<h2>Incident Details</h2>

<div class="form-horizontal">
    <hr />

    <dl class="dl-horizontal">
        <dt>Incident Number</dt>
        <dd>@Model.IncidentNumber</dd>

        <dt>Type</dt>
        <dd>@Model.IncidentType</dd>

        <dt>Date</dt>
        <dd>@Model.IncidentDate.ToShortDateString()</dd>

        <dt>Location</dt>
        <dd>@Model.Location</dd>

        <dt>Description</dt>
        <dd>@Model.Description</dd>

        <dt>Status</dt>
        <dd>@Model.Status</dd>

        <dt>Reported By</dt>
        <dd>@Model.ReportedBy</dd>

        <dt>Reported Date</dt>
        <dd>@Model.ReportedDate.ToShortDateString()</dd>

        <dt>Assigned Officer</dt>
        <dd>@(Model.AssignedOfficer?.FullName ?? "UnAssigned")</dd>

        <dt>Related Cases</dt>
        <dd>
            <ul>
                @foreach (var ic in Model.IncidentCases)
                {
                    <li>@ic.Case.CaseNumber - @ic.Case.CaseTitle</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
</div>
