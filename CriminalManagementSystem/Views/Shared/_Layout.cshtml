<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Criminal Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            @Html.ActionLink("CMS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarNav" title="Toggle navigation" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Criminals", "Index", "Criminals", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Cases", "Index", "Cases", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Arrests", "Index", "Arrests", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Facilities", "Index", "Facilities", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Evidence", "Index", "Evidence", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Court Hearings", "Index", "CourtHearings", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("About","About", "Home", null, new {@class = "nav-link"})</li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (Session["userID"] != null)
                    {
                        if (Session["Role"] != null && Session["Role"].ToString() == "Admin")
                        {
                            <li class="nav-item">@Html.ActionLink("Admin", "Index", "Admin", null, new { @class = "nav-link" })</li>
                        }
                        <li class="nav-item">
                            <span class="nav-link">Welcome, @Session["userName"].ToString()</span>
                        </li>
                        <li class="nav-item">@Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li class="nav-item">@Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Criminal Management System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
