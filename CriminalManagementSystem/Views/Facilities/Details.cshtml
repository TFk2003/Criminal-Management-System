@model CriminalManagementSystem.Models.Facility

@{
    ViewBag.Title = "Facility Details";
}

<h2>Facility Details</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Facility Name</dt>
            <dd class="col-sm-9">@Model.FacilityName</dd>

            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.FacilityType</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3">Capacity</dt>
            <dd class="col-sm-9">@Model.Capacity</dd>

            <dt class="col-sm-3">Warden</dt>
            <dd class="col-sm-9">@Model.Warden</dd>
        </dl>
    </div>
</div>
<div class="mt-3">
    @Html.ActionLink("Edit", "Edit", new { id = Model.FacilityID }, new { @class = "btn btn-warning" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>
